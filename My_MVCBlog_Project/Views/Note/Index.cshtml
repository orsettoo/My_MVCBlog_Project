@using My_MVCBlog_Project.Entitites;
@model IEnumerable<Note>

@{
    ViewData["Title"] = "Notlarım";
}

<div class="row">
    <div class="col">
        <h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
    </div>
</div>

<div class="row mb-4">
    <div class="col table-responsive">
        <table class="table table-hover table striped table-sm small">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Title</th>
                    <th>Summary</th>
                    <th class="text-center">IsDraft</th>
                   
                    <th class="text-center">Yorum Adedi</th>
                    <th>Created User</th>
                    <th>Created User</th>
                    <th>ModifiedUser</th>
                    <th>ModifiedDate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Category.Name</td>
                        <td>@item.Title</td>
                        <td>@item.Summary</td>
                        <td class="text-center"><i class="fa fa-@(item.IsDraft ? "check text-success": "times text-danger")"></i></td>
                        <td class="text-center">@item.Comments.Count</td>
                        <td>@item.CreatedUser</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedDate</td>
                        <td>
                            <a class="btn btn-danger btn-sa" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fa fa-trash"></i> Silme
                            </a>
                            <a class="btn btn-warning btn-sa" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fa fa-edit"></i> Düzenle
                            </a>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>