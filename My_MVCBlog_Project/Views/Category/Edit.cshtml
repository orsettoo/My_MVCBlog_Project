@model CategoryEditViewModel
@{
    ViewData["Title"] = "Kategori Düzenle";
}


<div class="row mb-4">
    <div class="col">
        <h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
    </div>
</div>


<div class="row mb-4">
    <div class="col">
        <form method="post" asp-action="Edit">
            <div class="form-group">
                <label asp-for="Name">Kategori Adı</label>
                <input type="text" asp-for="Name" class="form-control" id="CategoryName" placeholder="Kategori Adı">
            </div>
            <div class="form-group">
                <label asp-for="Description" class="font-weight-bold small">Kategori Açıklama</label>
                <textarea asp-for="Description" type="text" rows="4" class="form-control" id="CategoryName" placeholder="Açıklama"></textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-save mr-2"></i>Kaydet
                </button>
            </div>
            <a class="btn btn-secondary" asp-action="Edit" asp-controller="Category"><i class="fa fa-arrow-left mr-2"></i>Listeye Dön</a>
        </form>

    </div>
</div>
﻿
